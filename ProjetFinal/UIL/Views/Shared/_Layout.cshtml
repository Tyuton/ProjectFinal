<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Projet WebScraper</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", required:false)
    <link href="~/Content/Gerer.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Projet WebScraper", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("A propos", "About", "Home")</li>
                    <li>@Html.ActionLink("Nous contacter", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Gestion", "manageQueries", "addNewQuery")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <hr>
            <p>&copy; @DateTime.Now.Year - Projet WebScraper</p>
            @*<p class="text-muted">Projet Selenium 2017.</p>*@
            <p class="text-muted">Formation GT'M Ingénierie - Formateur Ali MAKRI</p>
            <p class="text-muted pull-right">Réalisé par ARNAUD Jonathan et CHERBAL Amin </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
</body>
</html>
